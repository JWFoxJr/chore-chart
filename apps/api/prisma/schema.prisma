generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  PARENT
  KID
}

model User {
  id        String   @id @default(cuid())
  name      String
  role      UserRole @default(KID)
  active    Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  completions ChoreCompletion[]

  @@index([active])
}

model Chore {
  id        String  @id @default(cuid())
  title     String
  points    Int     @default(0)
  active    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  completions ChoreCompletion[]

  @@index([active])
}

model ChoreCompletion {
  id          String   @id @default(cuid())

  userId      String
  choreId     String

  // when the chore was actually done (drives calendar + reporting)
  completedAt DateTime

  // optional but handy for auditing / “who logged it”
  createdAt   DateTime @default(now())

  notes       String?

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)
  chore Chore @relation(fields: [choreId], references: [id], onDelete: Restrict)

  @@index([completedAt])
  @@index([userId, completedAt])
}

model Reward {
  id         String  @id @default(cuid())
  title      String
  costPoints Int
  active     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([active])
}
